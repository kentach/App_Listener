<div class="container mt-4">
  <h2 class="text-center mb-4">テキスト一覧</h2>

  <div id="levelCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% @textbooks_by_level.sort.each_with_index do |(level, textbooks), index| %>
        <div class="carousel-item <%= 'active' if index == 0 %>">
          <div class="d-flex justify-content-center flex-wrap">
            <% textbooks.each do |textbook| %>
              <div class="text-center m-2">
                <%= link_to textbook_path(textbook), class: "text-decoration-none" do %>
                  <div class="textbook-card" style="width: 150px;">
                    <div class="textbook-image-container">
                      <img src="<%= textbook.cover_image %>" 
                           class="img-fluid rounded" 
                           alt="<%= textbook.name %>">
                    </div>
                    <p class="mt-2"><%= textbook.name %></p>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <%= render "shared/nav_button" %>
  </div>
</div>
