<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #f8f9fa;">
  <div class="col-12 col-md-6 col-lg-4">
    <div class="card shadow-sm border-0">
      <div class="card-body p-4">

        <h2 class="text-center mb-4">ログイン</h2>

        <%= form_with model: @user, url: user_session_path, local: true do |f| %>

          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <%= f.label :email, "メールアドレス*", class: "form-label fw-bold" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "パスワード*", class: "form-label fw-bold" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-3 form-check">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
            </div>
          <% end %>
          <!-- ログインボタン -->
          <div class="d-grid mb-3">
            <%= f.submit "ログイン", class: "btn-cta-red btn-lg" %>
          </div>
        <% end %>

        <div class="text-center mt-2">
          <p class="mb-1">アカウントをお持ちでない場合は <%= link_to "新規登録", new_user_registration_path %></p>
          <p><%= link_to "パスワードをお忘れですか？", new_user_password_path %></p>
        </div>

      </div>
    </div>
  </div>
</div>
