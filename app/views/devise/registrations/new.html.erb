<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>">
    <%= message %>
  </div>
<% end %>
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="col-md-6 col-lg-4">
    <h2 class="text-center mb-4">新規登録</h2>

    <%= form_with(model: resource, url: registration_path(resource_name), local: true) do |f| %>
      <!-- エラーメッセージ -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- 姓 -->
      <div class="mb-3">
        <%= f.label :last_name, "姓*", class: "form-label" %>
        <%= f.text_field :last_name, class: "form-control", required: true %>
      </div>

      <!-- 名前 -->
      <div class="mb-3">
        <%= f.label :first_name, "名前*", class: "form-label" %>
        <%= f.text_field :first_name, class: "form-control", required: true %>
      </div>

      <!-- ニックネーム -->
      <div class="mb-3">
        <%= f.label :nick_name, "ニックネーム", class: "form-label" %>
        <%= f.text_field :nick_name, class: "form-control" %>
      </div>

      <!-- profile_picture -->
      <div class="mb-3">
      <%= f.label :profile_picture %>
          <%= f.file_field :profile_picture, class: "form-control", accept: 'image/*' %>
          <%= f.hidden_field :profile_picture_cache %>
      </div>p

      <!-- メールアドレス -->
      <div class="mb-3">
        <%= f.label :email, "Eメール*", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
      </div>

      <!-- パスワード -->
      <div class="mb-3">
        <%= f.label :password, "パスワード*", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
      </div>

      <!-- パスワード確認 -->
      <div class="mb-3">
        <%= f.label :password_confirmation, "パスワード確認*", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
      </div>

      <!-- 英検取得級 -->
      <div class="mb-3">
        <%= f.label :eiken_level, "英検取得級*", class: "form-label" %>
        <%= f.select :eiken_level,
              [["まだ取得していない", 0], ["英検5級", 1], ["英検4級", 2], ["英検3級", 3],
               ["英検準2級", 4], ["英検2級", 5],
               ["英検準1級", 6], ["英検1級", 7]],
              { prompt: "選択してください" },
              class: "form-select" %>
      </div>

      <!-- 登録ボタン -->
      <div class="d-grid mb-3">
        <%= f.submit "新規登録", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <!-- Deviseリンク -->
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
