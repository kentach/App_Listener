<div class="podcast-player card shadow-sm p-4 rounded-3" style="background:#f8f9fb;">

  <!-- 進捗バー -->
  <div class="progress-container mt-3">
    <input id="progress" type="range" min="0" max="100" value="0">
    <div class="d-flex justify-content-between mt-1">
      <span id="currentTime">0:00</span>
      <span id="duration">0:00</span>
    </div>
  </div>

  <!-- プレイヤー -->
  <audio id="audio" preload="metadata">
    <source src="<%= url_for(@audio.file) %>" type="audio/mpeg">
    お使いのブラウザはaudioタグをサポートしていません。
  </audio>

  <!-- コントロール -->
  <div class="d-flex align-items-center justify-content-center gap-3 mt-3">

    <!-- 速度 -->
    <select id="speedControl" class="form-select form-select-sm" style="width:60px;">
      <option value="0.7">0.7x</option>
      <option value="0.8">0.8x</option>
      <option value="0.9">0.9x</option>
      <option value="1" selected>1x</option>
      <option value="1.1">1.1x</option>
      <option value="1.2">1.2x</option>
      <option value="1.3">1.3x</option>
      <option value="1.4">1.4x</option>
      <option value="1.5">1.5x</option>
    </select>

    <!-- 3秒戻る -->
    <button class="btn btn-outline-secondary btn-sm" id="rewind3">◀︎◀︎ 3s</button>

    <!-- 再生ボタン + 波形 -->
    <div class="d-flex flex-column align-items-center">
      <button id="playBtn" class="play-button">
        <span class="icon play"></span>
        <span class="icon pause" style="display:none;">❚❚</span>
      </button>
    </div>

    <!-- 3秒進む -->
    <button class="btn btn-outline-secondary btn-sm" id="forward3">3s ▶︎▶︎</button>
    <!-- ループ -->
    <button id="loopBtn" class="btn btn-outline-secondary btn-sm">🔁</button>
  </div>
</div>
